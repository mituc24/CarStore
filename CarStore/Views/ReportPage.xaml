<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="CarStore.Views.ReportPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:CarStore.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource GradientPageBackground}">

    <Grid CornerRadius="{StaticResource ColorPickerSliderCornerRadius}" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" Text="Báo cáo (thử nghiệm)" Style="{StaticResource TitleTextBlockStyle}" Margin="0 10"/>
        <StackPanel Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0 20">
                <Button x:Name="GenerateReportButton" Content="Tạo báo cáo" Style="{StaticResource AccentButtonStyle}" Click="GenerateReportButton_Click" Margin="0 10 0 0" Padding="10"/>
                <Button x:Name="SaveReportButton" Content="Lưu báo cáo" Style="{StaticResource AccentButtonStyle}" Click="SaveReportButton_Click" Margin="10 10 0 0" Padding="10"/>
            </StackPanel>

            <Border Background="White" BorderBrush="{StaticResource GeminiColor}" BorderThickness="1" Padding="20" CornerRadius="10" MinHeight="200" MinWidth="800" MaxHeight="450" MaxWidth="1250">
                <ScrollViewer VerticalScrollBarVisibility="Hidden" HorizontalScrollBarVisibility="Hidden" MaxHeight="500" MaxWidth="1000">
                    <TextBlock Text="Report" Name="ReportSection" TextWrapping="Wrap"/>
                </ScrollViewer>
            </Border>
        </StackPanel>
    </Grid>

</Page>
