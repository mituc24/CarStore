    <StackPanel>
        <!-- ListView -->
        <ListView ItemsSource="{x:Bind ComparisonData}">
            <ListView.ItemTemplate>
                <DataTemplate x:DataType="local:ComparisonRow">
                    <Grid>
                        <!-- Define three columns -->
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*"/>
                            <!-- Thuộc tính -->
                            <ColumnDefinition Width="3*"/>
                            <!-- Object 1 -->
                            <ColumnDefinition Width="3*"/>
                            <!-- Object 2 -->
                        </Grid.ColumnDefinitions>

                        <!-- Cột Thuộc tính -->
                        <TextBlock Grid.Column="0" 
                                   Text="{x:Bind PropertyName}" 
                                   VerticalAlignment="Center" 
                                   FontWeight="Bold"/>

                        <!-- Cột Object 1 -->
                        <ContentControl Grid.Column="1">
                            <ContentControl.Content>
                                <Image Source="{x:Bind Value1}" 
                                       Visibility="{x:Bind IsImageRow, Converter={StaticResource BoolToVisibilityConverter}}"/>
                                <TextBlock Text="{x:Bind Value1}" 
                                           Visibility="{x:Bind IsImageRow, Converter={StaticResource BoolToInvertedVisibilityConverter}}"/>
                            </ContentControl.Content>
                        </ContentControl>
                        <!-- Cột Object 2 -->
                        <ContentControl Grid.Column="2">
                            <ContentControl.Content>
                                <Image Source="{x:Bind Value2}" 
                                       Visibility="{x:Bind IsImageRow, Converter={StaticResource BoolToVisibilityConverter}}"/>
                                <TextBlock Text="{x:Bind Value2}" 
                                           Visibility="{x:Bind IsImageRow, Converter={StaticResource BoolToInvertedVisibilityConverter}}"/>
                            </ContentControl.Content>
                        </ContentControl>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackPanel>

</Page>
